<odoo>

    
    <record id="action_paqueteria_seguimiento" model="ir.actions.act_window">
        <field name="name">Seguimiento</field>
        <field name="res_model">paqueteria.seguimiento</field>
        <field name="view_mode">list,form</field>
    </record>

   
    <record id="view_list_paqueteria_seguimiento" model="ir.ui.view">
        <field name="name">paqueteria.seguimiento.list</field>
        <field name="model">paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <list>
                <field name="paquete_id"/>
                <field name="fecha"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    
    <record id="view_form_paqueteria_seguimiento" model="ir.ui.view">
        <field name="name">paqueteria.seguimiento.form</field>
        <field name="model">paqueteria.seguimiento</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="paquete_id"/>
                        <field name="fecha"/>
                        <field name="estado"/>
                        <field name="notas"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
