<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   
    <record id="view_paqueteria_empresa_list" model="ir.ui.view">
        <field name="name">paqueteria.empresa.list</field>
        <field name="model">paqueteria.empresa</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="telefono"/>
                <field name="direccion"/>
            </list>
        </field>
    </record>

    <record id="view_paqueteria_empresa_form" model="ir.ui.view">
        <field name="name">paqueteria.empresa.form</field>
        <field name="model">paqueteria.empresa</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="telefono"/>
                        <field name="direccion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   
    <record id="action_paqueteria_empresa" model="ir.actions.act_window">
        <field name="name">Empresas</field>
        <field name="res_model">paqueteria.empresa</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
