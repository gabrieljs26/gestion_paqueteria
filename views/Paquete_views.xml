<odoo>
    <record id="action_paqueteria_paquete" model="ir.actions.act_window">
        <field name="name">Paquetes</field>
        <field name="res_model">paqueteria.paquete</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_form_paqueteria_paquete" model="ir.ui.view">
        <field name="name">paqueteria.paquete.form</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="remitente_id"/>
                        <field name="destinatario_id"/>
                        <field name="camion_id"/>
                    </group>
                    <group string="DirecciÃ³n de entrega">
                        <field name="country"/>
                        <field name="region"/>
                        <field name="municipio"/>
                        <field name="calle"/>
                        <field name="numero"/>
                        <field name="datos_extra"/>
                    </group>
                    <group string="Seguimiento">
                        <field name="actualizaciones_ids">
                            <list>
                                <field name="fecha"/>
                                <field name="estado"/>
                                <field name="notas"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_list_paqueteria_paquete" model="ir.ui.view">
        <field name="name">paqueteria.paquete.list</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="remitente_id"/>
                <field name="destinatario_id"/>
                <field name="camion_id"/>
            </list>
        </field>
    </record>
</odoo>
