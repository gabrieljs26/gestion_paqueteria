<odoo>
    <record id="action_paqueteria_camion" model="ir.actions.act_window">
        <field name="name">Camiones</field>
        <field name="res_model">paqueteria.camion</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_form_paqueteria_camion" model="ir.ui.view">
        <field name="name">paqueteria.camion.form</field>
        <field name="model">paqueteria.camion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="matricula"/>
                        <field name="conductor_actual_id"/>
                        <field name="conductores_antiguos_ids"/>
                        <field name="fecha_itv"/>
                        <field name="notas"/>
                    </group>

                    <group string="Paquetes transportados">
                        <field name="paquetes_ids">
                            <list>
                                <field name="name"/>
                                <field name="destinatario_id"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_list_paqueteria_camion" model="ir.ui.view">
        <field name="name">paqueteria.camion.list</field>
        <field name="model">paqueteria.camion</field>
        <field name="arch" type="xml">
            <list>
                <field name="matricula"/>
                <field name="conductor_actual_id"/>
                <field name="fecha_itv"/>
            </list>
        </field>
    </record>
</odoo>
